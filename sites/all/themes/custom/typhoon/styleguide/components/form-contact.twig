{% block formContact %}
<div class="container">
  <h2 class="form-contact-title">Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.</h2>
  <div class="form-contact__description">
    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
  </div>
  <form class="form-contact">
    <div class="form-type-textfield">
      <label>Full name</label>
      <input type="text" maxlength="60" size="60" class="form-text" placeholder="JonDoe">
    </div>
    <div class="form-item form-type-textfield form-item-name">
      <label>Email</label>
      <input type="email" maxlength="60" size="60" class="form-email" placeholder="abc@gmail.com">
    </div>
    <div class="form-type-textfield">
      <label>Phone</label>
      <input type="text" maxlength="60" size="60" class="form-number" placeholder="098 777 666">
    </div>
    <div class="form-type-textarea">
      <label>Message</label>
      <div class="form-textarea-wrapper resizable textarea-processed resizable-textarea">
        <textarea class="form-textarea" rows="4" cols="60" placeholder="Your message..."></textarea>
      </div>
    </div>
    <div class="form-actions">
      <input type="submit" class="form-submit" value="Send">
    </div>
  </form>
</div>
{% endblock %}
